@page "/Categories"

@inject ApplicationDbContext Context
@attribute [StreamRendering(true)]

<h1>Categorias</h1>
<a href="/Categories/Create" class="btn btn-success">Nova Categoria</a>





@if (!Categories.Any())
{
    <p class="text-center">
        <em>Carregando as Categorias... </em>
    </p>
}
else
{
    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Nome da categoria</th>
                <th>Acções</th>
            </tr>

        </thead>
        <tbody>
            @foreach (var category in Categories)
            {
                <tr>
                    <td>@category.Id</td>
                    <td><a href="/Categories/@category.Id">@category.Title</a>
                    </td>
                    <td>
                        <a href="/categories/Edit/@category.Id" class="btn btn-primary">Editar</a>

                        &nbsp;
                        <a href="/categories/Delete/@category.Id" class="btn btn-danger">Excluir</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
}






@code {

    public IEnumerable<Category> Categories { get; set; } = Enumerable.Empty<Category>();
    protected override async Task OnInitializedAsync()
    {
        // await Task.Delay(5000);
        Categories = await Context.Categories.AsNoTracking().ToListAsync();
    }

}
